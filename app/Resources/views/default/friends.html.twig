{% extends 'base.html.twig' %}

{% block pageContent %}

    {% embed 'sidebar.html.twig' %}
        {% block user_active %}
            class="active"
        {% endblock %}
    {%  endembed %}

    <!-- BEGIN PAGE CONTAINER-->
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>

            </div>
            <div class="modal-body">Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="grid simple ">
                                <div class="grid-title no-border">
                                    <div class="tools">	<a href="javascript:;" class="collapse"></a>
                                        <a href="#grid-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="grid-body no-border">

                                    <h3><span class="semi-bold">Friend list</span> </h3>

                                    <p> Here you can find all the persons with whom you chat once, and maybe fix the next rendez-vous !
                                    </p>
                                    <br>
                                    <table class="table table-bordered no-more-tables">
                                        <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Nationality</th>
                                            <th>Language</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for usr in users %}
                                                <tr>
                                                    <td class="text-center">{{ usr.firstName }} {{ usr.lastName }}</td>
                                                    <td class="text-center">{{ usr.nationality }} ({{ usr.city }})</td>
                                                    <td class="text-center">{{ usr.language }}</td>
                                                </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE -->
    </div>



{% endblock %}

