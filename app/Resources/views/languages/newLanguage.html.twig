{% extends 'base.html.twig' %}

{% block pageContent %}
    {% embed 'sidebar.html.twig' %}
        {% block languages_active %}
            class="active"
        {% endblock %}
    {%  endembed %}

    <div class="page-content">
        <div class="content">
            <!-- BEGIN PAGE TITLE -->
            <ul class="breadcrumb">
                <li>
                    <p>YOU ARE HERE<p>
                    </p></li>
                <li><a class="active" href="{{ path('homepage') }}">Homepage</a></li>
                <li><a class="active" href="{{ path('languages') }}">My languages</a></li>
                <li><a class="active">New language</a></li>
            </ul>

            <div class="page-title"> <i class="icon-custom-home"></i>
                <h3>New/Edit language</h3>
            </div>
            <!-- END PAGE TITLE -->
            <!-- BEGIN PlACE PAGE CONTENT HERE -->
            <p><a class="btn btn-warning btn-cons" href="{{ path('languages') }}">Back to languages</a></p>

            <div class="row">
                <div class="col-md-12">
                    <div class="grid simple">
                        <div class="grid-title">
                            <h4>Add/Edit new language</h4>
                        </div>
                        <div class="grid-body">
                            {{ form_start(form, {'attr': {'id': 'form-condensed', 'class': 'form-no-horizontal-spacing'}}) }}
                            {{ form_errors(form) }}

                            <div class="row column-seperation">
                                <div class="col-md-6">
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            {{ form_widget(form.language, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row form-row">
                                        <div class="col-md-6">
                                            {{ form_widget(form.level, {'attr': {'class': 'select2 form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="pull-left">
                                    <input type="submit" class="btn btn-success btn-cons" value="Confirmer">
                                    <input type="reset" class="btn btn-warning btn-cons" value="RÃ©initialiser">
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PLACE PAGE CONTENT HERE -->
        </div>
    </div>
{% endblock %}